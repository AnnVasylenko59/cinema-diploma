{
  "openapi": "3.0.0",
  "info": {
    "title": "Cinema Diploma API",
    "version": "1.0.0",
    "description": "Interactive API documentation for the cinema-diploma project. Includes complex booking and filtering algorithms."
  },
  "servers": [{ "url": "http://localhost:5000", "description": "Local server" }],
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "login": { "type": "string", "example": "ivan_cinema" },
          "email": { "type": "string", "example": "user@example.com" },
          "name": { "type": "string", "example": "Ivan" },
          "isAdmin": { "type": "boolean", "example": false }
        }
      },
      "Booking": {
        "type": "object",
        "properties": {
          "showtimeId": { "type": "integer", "example": 105 },
          "selectedSeats": { "type": "array", "items": { "type": "string" }, "example": ["1-5", "1-6"] }
        }
      }
    }
  },
  "paths": {
    "/api/users/check": {
      "get": {
        "summary": "Check login or email availability",
        "tags": ["Auth"],
        "responses": { "200": { "description": "Check result" } }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "User Authentication",
        "tags": ["Auth"],
        "responses": { "200": { "description": "Successful authorization with JWT" } }
      }
    },
    "/api/showtimes": {
      "get": {
        "summary": "Complex showtime filtering",
        "description": "Filtering algorithm: converts date to 00:00 - 23:59 range.",
        "tags": ["Showtimes"],
        "responses": { "200": { "description": "Filtered showtimes" } }
      }
    },
    "/api/bookings": {
      "post": {
        "summary": "Atomic booking creation",
        "description": "Double booking prevention algorithm via Prisma transaction.",
        "tags": ["Bookings"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "201": { "description": "Booked successfully" } }
      }
    }
  }
}